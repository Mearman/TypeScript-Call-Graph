{
    "exclude": [
        "node_modules",
        "static"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "Node",
        "module": "ESNext",
        "esModuleInterop": true,
        "outDir": "./bin",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*",
                "tests/*"
            ]
        },
        /* Linting */
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        /* Rules */
        "allowJs": false,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "exactOptionalPropertyTypes": true,
        "traceResolution": true,
        "sourceMap": true,
    },
}