{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "outDir": "./dist",
        "sourceMap": true,
        /* Linting */
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        /* Rules */
        "allowJs": false,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "exactOptionalPropertyTypes": true,
        "traceResolution": true,
    },
    "include": [
        "src",
        "test"
    ],
    "exclude": [
        "node_modules",
        "static"
    ]
}