{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "Node10",
        "module": "ESNext",
        "esModuleInterop": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*",
                "tests/*"
            ]
        },
        /* Linting */
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        /* Rules */
        "allowJs": false,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "exactOptionalPropertyTypes": true,
        "traceResolution": true,
        "sourceMap": true
    },
    "include": [
        "src",
        "test"
    ],
    "exclude": [
        "node_modules",
        "static"
    ]
}